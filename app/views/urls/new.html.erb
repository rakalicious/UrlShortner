
<%= link_to 'Logout', urls_logout_path %>
<br><br>

<%= form_with url: urls_convert_long_path do |form| %>
  <p>
    <center>
      
    <%= form.label :domain %>
      <%= form.text_field :domain %>

      <%= form.label :full_url %>
      <%= form.text_field :long %>

     <%= form.submit 'Long to Short'%><br><br>
<% end %>
<%= form_with url: urls_convert_short_path do |form| %>

      <%= form.label :short_url %>
      <%= form.text_field :short %>
    <%= form.submit 'Short to Long'%><br><br><br>

    <% pika = @req_ans %><br><br>
    <% c = 0 %>
    <% if @conv != nil %>
    <% #c = 0 %>
    <% #else %>
    <% c = @conv.count %>
    <% end %>
    
      <%= form.label "Count = #{c}" %><br><br>

    <%= form.label :Output ,"#{pika}" %><br><br>

<% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
    
    </center>
  </p>
<% end %>