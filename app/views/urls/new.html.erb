
<%= link_to 'Logout', urls_logout_path %>

<%= form_with url: urls_convert_long_path do |form| %>
  <p>
    <center>
      
      <%= form.label :full_url %>
      <%= form.text_field :long %>

      <%= form.label :domain %>
      <%= form.text_field :domain %>


     <%= form.submit 'Long to Short'%><br>
<% end %>
<%= form_with url: urls_convert_short_path do |form| %>

      <%= form.label :short_url %>
      <%= form.text_field :short %>
      <%= form.label "#{@conv.count}" %>
    <%= form.submit 'Short to Long'%><br>

    <% pika = params[:commit] %>
    <% puts params %>
    

    <%= form.label :long_op ,"#{pika}" %><br>

<% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
    
    </center>
  </p>
<% end %>